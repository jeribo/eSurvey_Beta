<h1>Listing countries</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Locale</th>
    <th>Inactivated</th>
    <th>Abbreviated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @countries.each do |country| %>
  <tr>
    <td><%= country.description %></td>
    <td><%= country.locale %></td>
    <td><%= country.inactivated %></td>
    <td><%= country.abbreviated %></td>
    <td><%= link_to 'Show', country %></td>
    <td><%= link_to 'Edit', edit_country_path(country) %></td>
    <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

