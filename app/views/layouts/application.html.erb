<!DOCTYPE html>
<html>
<head>
  <title> <%=  t("site_name") %> </title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="navbar">
  	<div class="navbar-inner">
  		<div class="container">
  			<a class="brand" href="welcome/index">
  				<%= t("site_name") %>  
  			</a>
  			<p class="navbar-text">
  			<%= tabs %>	  			
  			</p>
    	    <p class="navbar-text pull-right">
    	      <% if user_signed_in? %>
    	        <div id="user_loggin_box" style="float:right">
    	  	      <%= current_user.email %>
    	  		  <%= link_to "Logout", destroy_user_session_path, :method => :delete, :class => 'navbar-link' %>
    	        </div>
              <% else %>
                <%= link_to t("devise.registrations.new.title"), new_user_registration_path, :class => 'navbar-link' %>
      	        <%= link_to t("devise.sessions.new.title"), new_user_session_path, :class => 'navbar-link' %>
              <% end %>
             </p>
        </div>
     </div>
  </div>
  <div class="container">
  	<%= render 'layouts/messages' %>
    <%= yield %>
  </div>
  <footer>
    <div class="form-actions">
      <%= language_links %>
    </div>
  </footer>

</body>
</html>
