<h1>Listing people</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Federal</th>
    <th>Regional</th>
    <th>Social security</th>
    <th>Birthday</th>
    <th>Email</th>
    <th>Inactivated at</th>
    <th>Mothers name</th>
    <th>Fathers name</th>
    <th>Phone number</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @people.each do |person| %>
  <tr>
    <td><%= person.name %></td>
    <td><%= person.federal_id %></td>
    <td><%= person.regional_id %></td>
    <td><%= person.social_security %></td>
    <td><%= person.birthday %></td>
    <td><%= person.email %></td>
    <td><%= person.inactivated_at %></td>
    <td><%= person.mothers_name %></td>
    <td><%= person.fathers_name %></td>
    <td><%= person.phone_number %></td>
    <td><%= link_to 'Show', person %></td>
    <td><%= link_to 'Edit', edit_person_path(person) %></td>
    <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

