<%= semantic_form_for @person do |f| %>
  <%= f.inputs do %>
    <%= f.input :name %>
    <%= f.input :federal_id %>
    <%= f.input :regional_id %>
    <%= f.input :social_security %>
    <%= f.input :birthday %>
    <%= f.input :email %>
    <%= f.input :mothers_name %>
    <%= f.input :fathers_name %>
    <%= f.input :phone_number %>    
  <% end %>
  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
